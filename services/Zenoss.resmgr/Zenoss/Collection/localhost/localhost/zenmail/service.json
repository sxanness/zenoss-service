{
    "RAMCommitment": "1G", 
    "Description": "Collector daemon that listens on SMTP and converts email messages into events", 
    "Launch": "manual", 
    "Tags": [
        "ZenPacks.zenoss.ZenMail", 
        "daemon", 
        "collector"
    ], 
    "MonitoringProfile": {
        "ThresholdConfigs": [
            {
                "EventTags": {
                    "Explanation": "This service is missing runs", 
                    "EventClass": "/App/Zenoss", 
                    "Resolution": "Add more collectors", 
                    "Severity": 3
                }, 
                "Name": "Missed Runs High", 
                "MetricSource": "zenmail", 
                "Threshold": {
                    "Max": "5", 
                    "Min": ""
                }, 
                "DataPoints": [
                    "missedRuns"
                ], 
                "Type": "MinMax", 
                "ID": "missedRuns.high", 
                "Description": "High number of missed runs"
            }
        ], 
        "MetricConfigs": [
            {
                "Metrics": [
                    {
                        "Name": "Event Count", 
                        "Counter": true, 
                        "Description": "Total number of events.", 
                        "Unit": "Events", 
                        "ID": "eventCount"
                    }, 
                    {
                        "Name": "Event Queue Length", 
                        "Counter": false, 
                        "Description": "The number of events pending to be flushed from a daemon's memory queue.", 
                        "Unit": "Events", 
                        "ID": "eventQueueLength"
                    }, 
                    {
                        "Name": "Missed Runs", 
                        "Counter": true, 
                        "Description": "Number of missed runs of tasks running on daemon.", 
                        "Unit": "Runs", 
                        "ID": "missedRuns"
                    }, 
                    {
                        "Name": "Queued Tasks", 
                        "Counter": false, 
                        "Description": "Number of tasks scheduled to be run, but are not running yet.", 
                        "Unit": "Tasks", 
                        "ID": "queuedTasks"
                    }, 
                    {
                        "Name": "Running Tasks", 
                        "Counter": false, 
                        "Description": "Number of currently running tasks.", 
                        "Unit": "Tasks", 
                        "ID": "runningTasks"
                    }, 
                    {
                        "Name": "Task Count", 
                        "Counter": false, 
                        "Description": "Total number of tasks.", 
                        "Unit": "Tasks", 
                        "ID": "taskCount"
                    }
                ], 
                "Name": "zenmail internal metrics", 
                "Description": "zenmail internal metrics", 
                "ID": "zenmail"
            }
        ], 
        "GraphConfigs": [
            {
                "description": "Total number of events.", 
                "footer": false, 
                "yAxisLabel": "Event Count", 
                "range": {
                    "start": "1h-ago", 
                    "end": "0s-ago"
                }, 
                "returnset": "EXACT", 
                "datapoints": [
                    {
                        "name": "Event Count", 
                        "format": "%d", 
                        "aggregator": "avg", 
                        "metric": "eventCount", 
                        "metricSource": "zenmail", 
                        "id": "eventCount", 
                        "rate": true, 
                        "type": "line", 
                        "legend": "Event Count", 
                        "fill": false
                    }
                ], 
                "type": "line", 
                "id": "eventCount", 
                "name": "Event Count"
            }, 
            {
                "description": "The number of events pending to be flushed from a daemon's memory queue.", 
                "footer": false, 
                "yAxisLabel": "Event Queue Length", 
                "range": {
                    "start": "1h-ago", 
                    "end": "0s-ago"
                }, 
                "returnset": "EXACT", 
                "datapoints": [
                    {
                        "name": "Event Queue Length", 
                        "format": "%d", 
                        "aggregator": "avg", 
                        "metric": "eventQueueLength", 
                        "metricSource": "zenmail", 
                        "id": "eventQueueLength", 
                        "rate": false, 
                        "type": "line", 
                        "legend": "Event Queue Length", 
                        "fill": false
                    }
                ], 
                "type": "line", 
                "id": "eventQueueLength", 
                "name": "Event Queue Length"
            }, 
            {
                "description": "Number of missed runs of tasks running on daemon.", 
                "footer": false, 
                "yAxisLabel": "Missed Runs", 
                "range": {
                    "start": "1h-ago", 
                    "end": "0s-ago"
                }, 
                "returnset": "EXACT", 
                "datapoints": [
                    {
                        "name": "Missed Runs", 
                        "format": "%d", 
                        "aggregator": "avg", 
                        "metric": "missedRuns", 
                        "metricSource": "zenmail", 
                        "id": "missedRuns", 
                        "rate": true, 
                        "type": "line", 
                        "legend": "Missed Runs", 
                        "fill": false
                    }
                ], 
                "type": "line", 
                "id": "missedRuns", 
                "name": "Missed Runs"
            }, 
            {
                "description": "Number of queued, running, and total tasks.", 
                "footer": false, 
                "yAxisLabel": "", 
                "range": {
                    "start": "1h-ago", 
                    "end": "0s-ago"
                }, 
                "returnset": "EXACT", 
                "datapoints": [
                    {
                        "name": "Queued Tasks", 
                        "format": "%d", 
                        "aggregator": "avg", 
                        "metric": "queuedTasks", 
                        "metricSource": "zenmail", 
                        "id": "queuedTasks", 
                        "rate": false, 
                        "type": "line", 
                        "legend": "Queued Tasks", 
                        "fill": false
                    }, 
                    {
                        "name": "Running Tasks", 
                        "format": "%d", 
                        "aggregator": "avg", 
                        "metric": "runningTasks", 
                        "metricSource": "zenmail", 
                        "id": "runningTasks", 
                        "rate": false, 
                        "type": "line", 
                        "legend": "Running Tasks", 
                        "fill": false
                    }, 
                    {
                        "name": "Task Count", 
                        "format": "%d", 
                        "aggregator": "avg", 
                        "metric": "taskCount", 
                        "metricSource": "zenmail", 
                        "id": "taskCount", 
                        "rate": false, 
                        "type": "line", 
                        "legend": "Task Count", 
                        "fill": false
                    }
                ], 
                "type": "line", 
                "id": "tasks", 
                "name": "Tasks"
            }
        ]
    }, 
    "Actions": {
        "debug": "su - zenoss -c '${ZENHOME:-/opt/zenoss}/bin/{{.Name}} debug'", 
        "stats": "su - zenoss -c '${ZENHOME:-/opt/zenoss}/bin/{{.Name}} stats'"
    }, 
    "ChangeOptions": [], 
    "ConfigFiles": {
        "/opt/zenoss/etc/zenmail.conf": {
            "Owner": "zenoss:zenoss", 
            "Permissions": "0664", 
            "FileName": "/opt/zenoss/etc/zenmail.conf"
        }, 
        "/opt/zenoss/etc/global.conf": {
            "Content": "# Generated by serviced\n{{range $k,$v:=contextFilter . \"global.conf.\"}}{{$k}} {{$v}}\n{{end}}", 
            "Owner": "zenoss:zenoss", 
            "Permissions": "660", 
            "Filename": "/opt/zenoss/etc/global.conf"
        }
    }, 
    "Instances": {
        "default": 1, 
        "max": 1
    }, 
    "Command": "su - zenoss -c \"/opt/zenoss/bin/zenmail run -c --logfileonly --monitor {{(parent .).Name}} \"", 
    "Name": "zenmail", 
    "Volumes": [
        {
            "Owner": "zenoss:zenoss", 
            "ResourcePath": "var-zenpacks", 
            "ContainerPath": "/var/zenoss", 
            "Permission": "0775"
        }
    ], 
    "HealthChecks": {
        "running": {
            "Interval": 5.0, 
            "Script": "pgrep -fu zenoss zenmail.py > /dev/null"
        }, 
        "service_ready": {
            "Interval": 10.0, 
            "Script": "echo 'QUIT' | nc -w 10 -C 127.0.0.1 50025 | grep -q '^220 '"
        }, 
        "zenhub_answering": {
            "Interval": 10.0, 
            "Script": "/opt/zenoss/bin/healthchecks/zenhub_answering"
        }
    }, 
    "Services": [], 
    "CPUCommitment": 1, 
    "ImageID": "zenoss/zenoss5x", 
    "Endpoints": [
        {
            "Protocol": "tcp", 
            "Application": "{{(parent (parent .)).Name}}_zenhubPB", 
            "PortNumber": 8789, 
            "Name": "zenhub", 
            "Purpose": "import"
        }, 
        {
            "Protocol": "tcp", 
            "Application": "controlplane_consumer", 
            "PortNumber": 8444, 
            "Name": "controlplane_consumer", 
            "Purpose": "import"
        }, 
        {
            "Protocol": "tcp", 
            "Application": "{{(parent .).Name}}_redis", 
            "PortNumber": 6379, 
            "Name": "CollectorRedis", 
            "Purpose": "import"
        }, 
        {
            "Protocol": "tcp", 
            "Name": "zenmail_smtp", 
            "AddressConfig": {
                "Protocol": "tcp", 
                "Port": 25
            }, 
            "Application": "{{(parent .).Name}}_zenmail", 
            "PortNumber": 50025, 
            "Purpose": "export"
        }
    ], 
    "LogConfigs": [
        {
            "path": "/opt/zenoss/log/zenmail.log", 
            "type": "zenmail", 
            "filters": [
                "zenmaildaemon"
            ], 
            "LogTags": [
                {
                    "Name": "monitor", 
                    "Value": "{{(parent .).Name}}"
                }
            ]
        }, 
        {
            "path": "/opt/zenoss/log/audit.log", 
            "type": "zenossaudit", 
            "filters": [
                "supervisord"
            ]
        }
    ]
}