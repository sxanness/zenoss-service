{
    "Hostname": "rd{{ plus 1 .InstanceID }}",
    "CPUCommitment": 1,
    "Command": "{{ if ne .InstanceID 0 }} /bin/sed -i 's/# slaveof <masterip> <masterport>/slaveof rd1 6379/' /etc/redis.conf & {{ end }} /usr/bin/redis-server /etc/redis.conf",
    "Description": "Redis server",
    "EmergencyShutdownLevel": 2,
    "Endpoints": [
        {
          "Name": "CollectorRedises",
          "Purpose": "import_all",
          "Protocol": "tcp",
          "PortNumber": 16379,
          "PortTemplate": "",
          "VirtualAddress": "rd{{ plus 1 .InstanceID }}:6379",
          "Application": "localhost_redis",
          "ApplicationTemplate": "{{(parent .).Name}}_redis"
        },
        {
            "Application": "zproxy",
            "Name": "zproxy",
            "PortNumber": 8080,
            "Protocol": "tcp",
            "Purpose": "import"
        },
        {
            "Application": "{{(parent .).Name}}_redis",
            "Name": "CollectorRedis",
            "PortNumber": 6379,
            "Protocol": "tcp",
            "Purpose": "export"
        }
    ],
    "HealthChecks": {
        "metrics": {
            "Interval": 15,
            "Script": "/opt/zenoss/bin/healthchecks/collectorredis/metrics"
        }
    },
    "ImageID": "zenoss/zenoss5x",
    "Instances": {
        "min": 1
    },
    "Launch": "auto",
    "LogConfigs": [
        {
            "path": "/var/log/redis/redis.log",
            "type": "redis"
        }
    ],
    "MonitoringProfile": {
        "GraphConfigs": [
            {
                "datapoints": [
                    {
                        "aggregator": "sum",
                        "fill": false,
                        "format": "%d",
                        "id": "metricsLength",
                        "legend": "Metrics",
                        "metric": "redis.metricsLength",
                        "metricSource": "redis",
                        "name": "Metric Queue Length",
                        "rate": false,
                        "type": "line"
                    }
                ],
                "description": "Number of metrics awaiting processing",
                "footer": false,
                "id": "metricqueue",
                "name": "Metric Queue Length",
                "range": {
                    "end": "0s-ago",
                    "start": "1h-ago"
                },
                "returnset": "EXACT",
                "type": "line",
                "yAxisLabel": "Metrics"
            },
            {
                "datapoints": [
                    {
                        "aggregator": "avg",
                        "fill": false,
                        "format": "%d",
                        "id": "total_commands_processed",
                        "legend": "Data Points",
                        "metric": "redis.total_commands_processed",
                        "metricSource": "redis",
                        "name": "Total Commands",
                        "rate": true,
                        "type": "line"
                    }
                ],
                "description": "Number of commands per second",
                "footer": false,
                "id": "totalcommands",
                "name": "Total Commands",
                "range": {
                    "end": "0s-ago",
                    "start": "1h-ago"
                },
                "returnset": "EXACT",
                "type": "line",
                "yAxisLabel": "Commands/s"
            }
        ],
        "MetricConfigs": [
            {
                "Description": "redis internal metrics",
                "ID": "redis",
                "Metrics": [
                    {
                        "Counter": true,
                        "Description": "Number of commands processed by redis.",
                        "ID": "redis.total_commands_processed",
                        "Name": "Total Commands",
                        "Unit": "Count"
                    },
                    {
                        "Counter": false,
                        "Description": "Number of metrics awaiting processing",
                        "ID": "redis.metricsLength",
                        "Name": "Metrics Queue Length",
                        "Unit": "Count"
                    }
                ],
                "Name": "redis internal metrics"
            }
        ]
    },
    "Name": "redis",
    "RAMCommitment": "1G",
    "StartLevel": 0,
    "Tags": [
        "daemon",
        "collector"
    ],
    "HostPolicy": "REQUIRE_SEPARATE",
    "Privileged": true,
    "ChangeOptions": ["restartAllOnInstanceZeroDown"],
    "Volumes": [
        {
            "#####": "drwxr-xr-x 2 zenoss zenoss 4096 Feb 6 19:11 /var/lib/redis",
            "ContainerPath": "/var/lib/redis",
            "Owner": "root:root",
            "Permission": "0755",
            "ResourcePath": "{{(parent (parent .)).Name}}/{{(parent .).Name}}_collectorredis"
        }
    ]
}