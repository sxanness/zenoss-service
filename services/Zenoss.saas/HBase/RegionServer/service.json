{
    "CPUCommitment": 1,
    "Command": "/usr/bin/run-hbase-regionserver.sh /etc/hbase-site.xml $CONTROLPLANE_INSTANCE_ID",
    "ConfigFiles": {
        "/etc/hbase-env.sh": {
            "FileName": "/etc/hbase-env.sh",
            "Owner": "hbase:hbase",
            "Permissions": "0775"
        },
        "/etc/hbase-site.xml": {
            "FileName": "/etc/hbase-site.xml",
            "Owner": "hbase:hbase",
            "Permissions": "0664"
        }
    },
    "Description": "Region Server for HBase",
    "Endpoints": [
        {
            "Application": "hbase-master-.*",
            "Name": "hbase-master",
            "Purpose": "import"
        },
        {
            "Application": "hbase-regionserver",
            "Name": "hbase-regionserver",
            "PortNumber": 60200,
            "PortTemplate": "{{ plus 60200 .InstanceID }}",
            "Protocol": "tcp",
            "Purpose": "export"
        },
        {
            "Application": "hbase-regionserver",
            "Name": "hbase-regionservers",
            "PortNumber": 60200,
            "Protocol": "tcp",
            "Purpose": "import_all"
        },
        {
            "Application": "hbase-regionserverinfo",
            "Name": "hbase-regionserverinfo",
            "PortNumber": 60300,
            "PortTemplate": "{{ plus 60300 .InstanceID }}",
            "Protocol": "tcp",
            "Purpose": "export"
        },
        {
            "Application": "zookeeper-client",
            "Name": "zookeeper-client",
            "PortNumber": 2181,
            "Protocol": "tcp",
            "Purpose": "import_all",
            "VirtualAddress": "zk{{ plus 1 .InstanceID }}:2181"
        }
    ],
    "HealthChecks": {
        "answering": {
            "Interval": 10.0,
            "Script": "echo | nc localhost {{ plus 60200 .InstanceID }}"
        },
        "cluster_member": {
            "Interval": 10.0,
            "Script": "curl http://localhost:61000/status/cluster | grep -q 'localhost:{{ plus 60200 .InstanceID }}'"
        }
    },
    "HostPolicy": "PREFER_SEPARATE",
    "Hostname": "localhost",
    "ImageID": "zenoss/hbase:xx",
    "Instances": {
        "min": 3
    },
    "Launch": "auto",
    "LogConfigs": [
        {
            "path": "/opt/hbase/logs/hbase-regionserver.log",
            "type": "hbase"
        }
    ],
    "MonitoringProfile": {
        "GraphConfigs": [
            {
                "datapoints": [
                    {
                        "aggregator": "zimsum",
                        "fill": false,
                        "id": "numCallsInGeneralQueue",
                        "legend": "Current depth of the User Requests",
                        "metric": "numCallsInGeneralQueue",
                        "name": "numCallsInGeneralQueue",
                        "rate": false,
                        "rateoptions": {
                            "counter": true,
                            "counterMax": null,
                            "resetThreshold": 1048576
                        },
                        "type": "line"
                    },
                    {
                        "aggregator": "zimsum",
                        "fill": false,
                        "id": "numCallsInPriorityQueue",
                        "legend": "Current depth of the Internal Housekeeping Requests queue",
                        "metric": "numCallsInPriorityQueue",
                        "name": "numCallsInPriorityQueue",
                        "rate": false,
                        "rateoptions": {
                            "counter": true,
                            "counterMax": null,
                            "resetThreshold": 1048576
                        },
                        "type": "line"
                    },
                    {
                        "aggregator": "zimsum",
                        "fill": false,
                        "id": "flushQueueLength",
                        "legend": "Current depth of the memstore flush queue",
                        "metric": "flushQueueLength",
                        "name": "flushQueueLength",
                        "rate": false,
                        "rateoptions": {
                            "counter": true,
                            "counterMax": null,
                            "resetThreshold": 1048576
                        },
                        "type": "line"
                    },
                    {
                        "aggregator": "zimsum",
                        "fill": false,
                        "id": "compactionQueueLength",
                        "legend": "Current depth of the compaction request queue",
                        "metric": "compactionQueueLength",
                        "name": "compactionQueueLength",
                        "rate": false,
                        "rateoptions": {
                            "counter": true,
                            "counterMax": null,
                            "resetThreshold": 1048576
                        },
                        "type": "line"
                    }
                ],
                "description": "Queue Length",
                "footer": false,
                "id": "QueueLength",
                "miny": 0,
                "name": "Queue Length",
                "range": {
                    "end": "0s-ago",
                    "starts": "10s-ago"
                },
                "returnset": "EXACT",
                "type": "line",
                "yAxisLabel": "Blocks of items"
            },
            {
                "datapoints": [
                    {
                        "aggregator": "zimsum",
                        "fill": false,
                        "id": "slowAppendCount",
                        "legend": "The number of slow append operations",
                        "metric": "slowAppendCount",
                        "name": "slowAppendCount",
                        "rate": false,
                        "type": "line"
                    },
                    {
                        "aggregator": "zimsum",
                        "fill": false,
                        "id": "slowDeleteCount",
                        "legend": "The number of slow delete operations",
                        "metric": "slowDeleteCount",
                        "name": "slowDeleteCount",
                        "rate": false,
                        "type": "line"
                    },
                    {
                        "aggregator": "zimsum",
                        "fill": false,
                        "id": "slowGetCount",
                        "legend": "The number of slow get operations",
                        "metric": "slowGetCount",
                        "name": "slowGetCount",
                        "rate": false,
                        "type": "line"
                    },
                    {
                        "aggregator": "zimsum",
                        "fill": false,
                        "id": "slowIncrementCount",
                        "legend": "The number of slow increment operations",
                        "metric": "slowIncrementCount",
                        "name": "slowIncrementCount",
                        "rate": false,
                        "type": "line"
                    }
                ],
                "description": "Slow Operations",
                "footer": false,
                "id": "slowOps",
                "miny": 0,
                "name": "Slow Operations",
                "range": {
                    "end": "0s-ago",
                    "starts": "10s-ago"
                },
                "returnset": "EXACT",
                "type": "line",
                "yAxisLabel": "Operations"
            },
            {
                "datapoints": [
                    {
                        "aggregator": "zimsum",
                        "fill": true,
                        "id": "totalRequestCount",
                        "legend": "The total number of requests received",
                        "metric": "totalRequestCount",
                        "name": "totalRequestCount",
                        "rate": false,
                        "type": "line"
                    },
                    {
                        "aggregator": "zimsum",
                        "fill": true,
                        "id": "readRequestCount",
                        "legend": "The total number of read requests received",
                        "metric": "readRequestCount",
                        "name": "readRequestCount",
                        "rate": false,
                        "type": "line"
                    },
                    {
                        "aggregator": "zimsum",
                        "fill": true,
                        "id": "writeRequestCount",
                        "legend": "The total number of write requests received",
                        "metric": "writeRequestCount",
                        "name": "writeRequestCount",
                        "rate": false,
                        "type": "line"
                    }
                ],
                "description": "Operation Counts",
                "footer": false,
                "id": "opcounts",
                "miny": 0,
                "name": "Operation Counts",
                "range": {
                    "end": "0s-ago",
                    "starts": "10s-ago"
                },
                "returnset": "EXACT",
                "type": "line",
                "yAxisLabel": "Operations"
            }
        ],
        "MetricConfigs": [
            {
                "Description": "RegionServer internal metrics",
                "ID": "RegionServer",
                "Metrics": [
                    {
                        "ID": "numCallsInGeneralQueue",
                        "Name": "Current depth of the User Requests"
                    },
                    {
                        "ID": "numCallsInPriorityQueue",
                        "Name": "Current depth of the Internal Housekeeping Requests queue"
                    },
                    {
                        "ID": "flushQueueLength",
                        "Name": "Current depth of the memstore flush queue"
                    },
                    {
                        "ID": "compactionQueueLength",
                        "Name": "Current depth of the compaction request queue"
                    },
                    {
                        "ID": "slowAppendCount",
                        "Name": "The number of slow append operations"
                    },
                    {
                        "ID": "slowDeleteCount",
                        "Name": "The number of slow delete operations"
                    },
                    {
                        "ID": "slowGetCount",
                        "Name": "The number of slow get operations"
                    },
                    {
                        "ID": "slowIncrementCount",
                        "Name": "The number of slow increment operations"
                    },
                    {
                        "ID": "totalRequestCount",
                        "Name": "The total number of requests received"
                    },
                    {
                        "ID": "readRequestCount",
                        "Name": "The total number of read requests received"
                    },
                    {
                        "ID": "writeRequestCount",
                        "Name": "The total number of write requests received"
                    }
                ],
                "Name": "RegionServer internal metrics"
            }
        ]
    },
    "Name": "RegionServer",
    "Prereqs": [],
    "Privileged": true,
    "RAMCommitment": "1G",
    "Tags": [
        "daemon"
    ],
    "Volumes": [
        {
            "#####": "drwxr-xr-x  2 hbase hbase 4.0K Apr 15 12:57 /var/hbase",
            "ContainerPath": "/var/hbase",
            "Owner": "hbase:hbase",
            "Permission": "0755",
            "ResourcePath": "hbase-master"
        }
    ]
}